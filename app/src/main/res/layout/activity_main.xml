<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp">

        <TextView
            android:id="@+id/inputTV"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/outputTV"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:rowCount="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delBT"
                android:width="0dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="2"
                android:text="DEL"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"/>

            <Button
                android:id="@+id/equalBT"
                android:layout_height="80dp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="4dp"
                android:width="0dp"
                android:background="@drawable/rectangle_border"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/oneBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="1"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/twoBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="2"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/threeBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="1"
                android:layout_column="2"
                android:text="3"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/divBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="1"
                android:layout_column="3"
                android:text="/"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_2"/>

            <Button
                android:id="@+id/fourBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="4"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/fiveBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="2"
                android:layout_column="1"
                android:text="5"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/sixBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="2"
                android:layout_column="2"
                android:text="6"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/subBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="2"
                android:layout_column="3"
                android:text="-"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_2"/>

            <Button
                android:id="@+id/sevenBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="7"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/eightBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="3"
                android:layout_column="1"
                android:text="8"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/nineBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="3"
                android:layout_column="2"
                android:text="9"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/mulBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="3"
                android:layout_column="3"
                android:text="x"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_2"/>

            <Button
                android:id="@+id/pointBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="4"
                android:layout_column="0"
                android:text="."
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/zeroBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="4"
                android:layout_column="1"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_1"/>

            <Button
                android:id="@+id/percentBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="4"
                android:layout_column="2"
                android:text="%"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_2"/>

            <Button
                android:id="@+id/addBT"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:layout_row="4"
                android:layout_column="3"
                android:text="+"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border_2"/>

        </GridLayout>
        
    </LinearLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>